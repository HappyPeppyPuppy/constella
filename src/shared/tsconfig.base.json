{
  // compiler option만 설정
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // 서버/앱에서 각각 필요 시 오버라이드
    "moduleResolution": "Bundler", // 번들러(Expo/웹) 친화, 서버에서는 NodeNext로 오버라이드 권장
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // Babel/tsx 조합 안정성
    "verbatimModuleSyntax": true, // import 정합성 유지
    "moduleDetection": "force",
    "noEmit": true // 기본은 빌드 산출물 미생성(앱/웹용). 서버에서만 해제.
  }
}
